generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




enum Role {
  USER
  MODERATOR
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String    @unique
  password  String
  role      Role      @default(USER)
  location    String?
  website     String?
  instagram   String?
  twitter     String?
  hideEntries Boolean @default(false)
  isBanned    Boolean @default(false)
  entries   Entry[]
  likes     Like[]
  reports   Report[]
  notifications Notification[]
  sentUi    Message[] @relation("SentMessages")
  received  Message[] @relation("ReceivedMessages")
  createdAt DateTime  @default(now())
  image     String?
  bio       String?
  emailVerified DateTime?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Location {
  id        String   @id @default(cuid())
  slug      String   @unique
  googleId  String   @unique
  name      String
  address   String?
  photoUrl  String?
  entries   Entry[]
}

model Entry {
  id         String   @id @default(cuid())
  content    String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  location   Location @relation(fields: [locationId], references: [id])
  locationId String
  likes      Like[]
  reports    Report[]
  createdAt  DateTime @default(now())
  isDeleted  Boolean  @default(false)
}

model Message {
  id         String   @id @default(cuid())
  content    String
  image      String?
  isRead     Boolean  @default(false)
  deletedBySender   Boolean @default(false)
  deletedByReceiver Boolean @default(false)
  clearedBySender   Boolean @default(false)
  clearedByReceiver Boolean @default(false)
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  senderId   String
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  receiverId String
  createdAt  DateTime @default(now())
}

model Like {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  entryId   String
  createdAt DateTime @default(now())

  @@unique([userId, entryId])
}

enum ReportStatus {
  PENDING
  RESOLVED
  DISMISSED
}

model Report {
  id        String       @id @default(cuid())
  reason    String
  status    ReportStatus @default(PENDING)
  reporter  User         @relation(fields: [reporterId], references: [id])
  reporterId String
  entry     Entry        @relation(fields: [entryId], references: [id], onDelete: Cascade)
  entryId   String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // "like", "message", "report_resolved", "report_dismissed"
  message   String
  link      String?  // redirect URL
  isRead    Boolean  @default(false)
  userId    String   // receiver
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
